{% extends "Default/base.html.twig" %}

{% block head %}
  <link rel="stylesheet" href="{{ asset('css/'~themeAssets()~'/login.css') }}" media="screen"/>
{% endblock %}

{% block header "" %}

{% block body %}

  {% block fos_user_content %}

    <div class="container-fluid full-width">

      <div class="row justify-content-center">
        <div class="col-sm-11 col-md-8 col-lg-6 text-center" align="center">

          <div class="alert alert-success email-alert-margin">
            {{ "login.confirmationSend"|trans({}, "catroweb") }}
          </div>

          <!-- Redirects -->
          <div>
            <div class="form-group">
              <div class="col-md-12 control">
                <div class="redirect-first-line">
                  {{ 'login.alreadyAccount'|trans({}, 'catroweb') }}
                  <a id="create_account" href="{{ path('login') }}" rel="noreferrer">Log in</a>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div class="redirect-second-line">
                  {{ 'login.noAccount'|trans({}, 'catroweb') }}
                  <a id="create_account"
                     href="{{ path('fos_user_registration_register') }}">
                     {{ 'login.createAccount'|trans({}, 'catroweb') }}</a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

    </div>

  {% endblock fos_user_content %}

{% endblock body %}

{% block js %}
  <script src="{{ asset('js/register.min.js') }}"></script>
{% endblock %}
